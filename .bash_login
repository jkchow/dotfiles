alias be="bundle exec"
alias jbe="jruby -G --debug -S"

source ~/.bashrc
source ~/.envprivate

# /usr/local/bin is for ctags
alias ls='ls -G'
alias ll='ls -hl'
alias rgc='export RUBY_GC_MALLOC_LIMIT=90000000'
alias norgc='unset RUBY_GC_MALLOC_LIMIT'
export NODE_PATH=/usr/local/lib/node_modules


#http://code-worrier.com/blog/git-branch-in-bash-prompt/
source ~/.git-prompt.sh
export PS1="\u@:\W\[\033[32m\]\$(__git_ps1)\[\033[00m\] $ "

export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

export JRUBY_OPTS="--1.9 -J-Xmn512m -J-Xms2048m -J-Xmx2048m --dev -J-XX:+UseParNewGC -J-XX:+UseConcMarkSweepGC"

PATH=$HOME/.rbenv/bin:$PATH
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
PATH=/usr/local/heroku/bin:/usr/local/bin:./bin:$PATH:$HOME/.rbenv/bin:$HOME/.rvm/bin:/usr/local/Cellar/nginx/1.2.3/sbin:/usr/local/sbin:/usr/local/share/npm/bin

export GOPATH=$HOME/projects/go

PATH=$PATH:$GOPATH/bin


sa ()
{
  eval `ssh-agent -s`
  for f in `ls -d ~/.ssh/**`; do
    if ! [[ $f =~ id_rsa$ ]]
      then ssh-add $f >/dev/null 2>&1
    fi
  done
}

# Make sure to run `curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash -o ~/.git-completion.bash`
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

# For NVM
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh
